@inherits LayoutComponentBase

<MudThemeProvider Theme="darkTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Menu" Color="Color.Primary" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudAppBarSpacer />
        <MudText Color="Color.Primary">Villawhatever (it's dot com!)</MudText>
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Elevation="1" Clipped="true">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer Class="mt-16" MaxWidth="MaxWidth.False">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code{
    bool open = true;

    void ToggleDrawer()
    {
        open = !open;
    }
}