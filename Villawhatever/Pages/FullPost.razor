@page "/post/{Slug}"

@inherits DirtiableBase

<LoadingIndicator NullCheckObject="post">
    <MudText Typo="Typo.h4">@post.Title</MudText>
    <MudText Typo="Typo.h6" Color="Color.Primary">Posted on @($"{post.DatePosted:d}")</MudText>
    <MarkdownView Content="@post.Content" />
</LoadingIndicator>
